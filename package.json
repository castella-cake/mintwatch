{
    "name": "mintwatch",
    "description": "ニコニコ動画用のカスタマイズ可能な動画プレイヤー",
    "private": true,
    "version": "0.8.0",
    "type": "module",
    "license": "MIT",
    "homepage": "https://github.com/castella-cake/niconico-peppermint-extension#readme",
    "scripts": {
        "dev": "wxt",
        "dev:firefox": "wxt -b firefox",
        "build": "wxt build",
        "build:firefox": "wxt build -b firefox",
        "zip": "wxt zip",
        "zip:firefox": "wxt zip -b firefox",
        "compile": "tsc --noEmit",
        "postinstall": "wxt prepare"
    },
    "dependencies": {
        "@dnd-kit/core": "6.3.1",
        "@dnd-kit/modifiers": "9.0.0",
        "@dnd-kit/sortable": "10.0.0",
        "@dnd-kit/utilities": "3.2.2",
        "@tabler/icons-react": "^3.12.0",
        "@xpadev-net/niconicomments": "^0.2.74",
        "dompurify": "^3.2.5",
        "history": "^5.3.0",
        "hls.js": "^1.6.2",
        "html-react-parser": "5.2.3",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-error-boundary": "5.0.0",
        "react-focus-lock": "2.13.6",
        "react-markdown": "^10.1.0",
        "react-scan": "^0.3.4",
        "react-transition-group": "^4.4.5",
        "remark-gfm": "^4.0.1",
        "stylus": "^0.64.0"
    },
    "devDependencies": {
        "@types/chrome": "^0.0.318",
        "@types/jquery": "^3.5.31",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.3",
        "@types/react-transition-group": "^4.4.11",
        "@wxt-dev/module-react": "^1.1.1",
        "typescript": "^5.8.3",
        "wxt": "^0.20.6"
    },
    "engines": {
        "pnpm": ">=10.6"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "dtrace-provider",
            "esbuild",
            "spawn-sync"
        ],
        "patchedDependencies": {
            "@dnd-kit/core": "patches/@dnd-kit__core.patch"
        }
    }
}

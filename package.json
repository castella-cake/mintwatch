{
    "name": "mintwatch",
    "description": "ニコニコ動画用のカスタマイズ可能な動画プレイヤー",
    "private": true,
    "version": "0.9.0",
    "type": "module",
    "license": "MIT",
    "homepage": "https://github.com/castella-cake/niconico-peppermint-extension#readme",
    "scripts": {
        "dev": "wxt",
        "dev:firefox": "wxt -b firefox",
        "build": "wxt build",
        "build:firefox": "wxt build -b firefox",
        "zip": "wxt zip",
        "zip:firefox": "wxt zip -b firefox",
        "compile": "tsc --noEmit",
        "lint:style": "stylelint {entrypoints,components}/**/*.css",
        "postinstall": "wxt prepare",
        "e2e": "playwright test"
    },
    "dependencies": {
        "@dnd-kit/core": "6.3.1",
        "@dnd-kit/modifiers": "9.0.0",
        "@dnd-kit/sortable": "10.0.0",
        "@dnd-kit/utilities": "3.2.2",
        "@tabler/icons-react": "^3.34.0",
        "@tanstack/react-query": "^5.80.10",
        "@types/cloudflare-turnstile": "^0.2.2",
        "@xpadev-net/niconicomments": "^0.2.76",
        "dompurify": "^3.2.6",
        "history": "^5.3.0",
        "hls.js": "^1.6.5",
        "html-react-parser": "5.2.5",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-error-boundary": "6.0.0",
        "react-focus-lock": "2.13.6",
        "react-markdown": "^10.1.0",
        "react-scan": "^0.3.4",
        "react-transition-group": "^4.4.5",
        "react-transition-state": "^2.3.1",
        "remark-gfm": "^4.0.1",
        "sanitize.css": "^13.0.0",
        "stylus": "^0.64.0",
        "virtua": "^0.41.5"
    },
    "devDependencies": {
        "@playwright/test": "^1.53.1",
        "@types/chrome": "^0.0.326",
        "@types/jquery": "^3.5.31",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@types/react-transition-group": "^4.4.11",
        "@wxt-dev/module-react": "^1.1.1",
        "playwright": "^1.53.1",
        "postcss-nested": "^7.0.2",
        "postcss-scss": "^4.0.9",
        "stylelint": "^16.21.1",
        "stylelint-config-standard-scss": "^15.0.1",
        "typescript": "^5.8.3",
        "wxt": "^0.20.7"
    },
    "engines": {
        "pnpm": ">=10.6"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "dtrace-provider",
            "esbuild",
            "spawn-sync"
        ],
        "patchedDependencies": {
            "@dnd-kit/core": "patches/@dnd-kit__core.patch"
        }
    }
}

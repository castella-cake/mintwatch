{
    "name": "mintwatch",
    "description": "ニコニコ動画用のカスタマイズ可能な動画プレイヤー",
    "private": true,
    "version": "0.9.1",
    "type": "module",
    "license": "MIT",
    "homepage": "https://github.com/castella-cake/niconico-peppermint-extension#readme",
    "scripts": {
        "dev": "wxt",
        "dev:firefox": "wxt -b firefox",
        "build": "wxt build",
        "build:firefox": "wxt build -b firefox",
        "zip": "wxt zip",
        "zip:firefox": "wxt zip -b firefox",
        "compile": "tsc --noEmit",
        "lint:script": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:style": "stylelint {entrypoints,components}/**/*.css",
        "postinstall": "wxt prepare && lefthook install",
        "e2e": "playwright test"
    },
    "dependencies": {
        "@dnd-kit/core": "6.3.1",
        "@dnd-kit/modifiers": "9.0.0",
        "@dnd-kit/sortable": "10.0.0",
        "@dnd-kit/utilities": "3.2.2",
        "@tabler/icons-react": "^3.34.1",
        "@tanstack/react-query": "^5.85.3",
        "@types/cloudflare-turnstile": "^0.2.2",
        "@xpadev-net/niconicomments": "^0.2.76",
        "dompurify": "^3.2.6",
        "history": "^5.3.0",
        "hls.js": "^1.6.10",
        "html-react-parser": "5.2.6",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "react-error-boundary": "6.0.0",
        "react-focus-lock": "2.13.6",
        "react-markdown": "^10.1.0",
        "react-scan": "^0.4.3",
        "react-transition-group": "^4.4.5",
        "react-transition-state": "^2.3.1",
        "remark-gfm": "^4.0.1",
        "sanitize.css": "^13.0.0",
        "virtua": "^0.41.5"
    },
    "devDependencies": {
        "@csstools/postcss-minify": "^2.0.4",
        "@eslint/js": "^9.33.0",
        "@playwright/test": "^1.54.2",
        "@stylistic/eslint-plugin": "5.2.3",
        "@types/chrome": "^0.1.4",
        "@types/jquery": "^3.5.32",
        "@types/react": "^19.1.10",
        "@types/react-dom": "^19.1.7",
        "@types/react-transition-group": "^4.4.12",
        "@wxt-dev/module-react": "^1.1.3",
        "eslint": "9.33.0",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.3.0",
        "lefthook": "^1.12.3",
        "playwright": "^1.54.2",
        "postcss-nested": "^7.0.2",
        "postcss-scss": "^4.0.9",
        "stylelint": "^16.23.1",
        "stylelint-config-standard-scss": "^15.0.1",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.1",
        "vite-plugin-svgr": "^4.3.0",
        "wxt": "^0.20.8"
    },
    "engines": {
        "pnpm": ">=10.6"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "dtrace-provider",
            "esbuild",
            "lefthook",
            "spawn-sync"
        ],
        "patchedDependencies": {
            "@dnd-kit/core": "patches/@dnd-kit__core.patch"
        }
    }
}

.alert-wrapper {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #000a;
    backdrop-filter: blur(4px);
    display: flex;
    justify-content: center;
    align-items: center;
}

.alert-container {
    background: var(--bgcolor1);
    border: var(--border);
    padding: 24px;
    border-radius: var(--radius);
    box-shadow: 0 0 8px #000;
    width: min(32rem, 90vw);
    display: grid;
    grid-template-columns: max-content 1fr;
    grid-template-rows: repeat(3, max-content);
    gap: 4px 1rem;
}

.alert-icon {
    grid-row: 1 / 3;
    grid-column: 1 / 2;
    align-self: center;
    svg {
        width: 2rem;
        height: 2rem;
    }
}

.alert-title {
    font-size: 1.25rem;
    font-weight: bold;
}

.alert-body {
    white-space: pre-wrap;
    font-size: 0.9rem;
}

.alert-buttons {
    grid-column: 1 / 3;
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 16px;
}

.alert-button {
    background: var(--bgcolor2);
    color: var(--textcolor1);
    border: var(--border);
    padding: 8px 12px;
    border-radius: var(--radius);
    cursor: pointer;
    transition: var(--transition-normal);
    min-width: 8em;
    font-weight: bold;
    &:hover {
        background: var(--hover1);
    }
}
.alert-button[data-isprimary="true"] {
    background: var(--textcolor1);
    color: var(--bgcolor2);
    &:hover {
        background: var(--textcolor2);
        color: var(--bgcolor2);
    }
}
.alert-button[aria-disabled="true"] {
    background: var(--bgcolor1);
    color: var(--textcolor3);
    cursor: not-allowed;
}

.alert-wrapper {
    &[data-animation="preEnter"], &[data-animation="entering"] {
        --rotatedeg: -10deg;
        --blur: 8px;
        --zmove: -10cm;
    }
    &[data-animation="entering"] {
        perspective: 100cm;
        transition: opacity 0.1s ease;
        .alert-container {
            transition: transform 0.2s ease, filter 0.3s ease;
        }
        .alert-icon svg {
            stroke-dasharray: 64px;
            transition: stroke-dashoffset 1.5s cubic-bezier(0.16, 1, 0.3, 1);
        }
    }
    &[data-animation="exiting"]  {
        transition: opacity 0.3s ease;
        .alert-container {
            transition: transform 0.2s ease, filter 0.3s ease;
        }
        .alert-container > div {
            opacity: 0;
        }
    }
    &[data-animation="preEnter"] {
        opacity: 0;
        .alert-container {
            transform: translate3d(0px, 0px, var(--zmove)) rotate3d(1, 0, 0, var(--rotatedeg));
        }
        .alert-icon svg {
            stroke-dasharray: 64px;
            stroke-dashoffset: 64px;
        }
    }
    &[data-animation="exiting"], &[data-animation="exited"] {
        opacity: 0;
        .alert-container {
            filter: blur(var(--blur));
            transform: translate3d(0px, 0px, var(--zmove)) rotate3d(1, 0, 0, 0deg);
        }
    }
    &[data-animation="entering"], &[data-animation="entered"] {
        opacity: 1;
        .alert-container {
            filter: blur(0px);
            transform: translate3d(0px, 0px, 0px) rotate3d(1, 0, 0, 0deg);
        }
        .alert-icon svg {
            stroke-dashoffset: 0px;
        }
    }
}
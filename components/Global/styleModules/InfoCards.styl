div.info-card {
    display: grid;
    grid-template-columns: max-content max-content 1fr;
    grid-template-rows: auto auto;
    align-items: center;
    white-space: nowrap;
    --thumb-height: 4rem;
    padding: 6px;
    gap: 0px 10px;
    text-decoration: none;
    overflow: hidden;
    border-radius: var(--radius);
    position: relative;
}

a.info-card-link {
    position: absolute;
    inset: 0;
}

.info-card-thumbnail {
    position: relative;
    aspect-ratio: 16 / 9;
    grid-column: 1 / 3;
    grid-row: 1 / 3;
    overflow: hidden;
    align-self: stretch;
    height: var(--thumb-height);
    img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        border-radius: var(--radius-mini);
    }
}

.info-card-durationtext {
    position: absolute;
    right: 0;
    bottom: 0;
    background: #000a;
    color: #fff;
    margin: 2px;
    border-radius: var(--radius-mini);
    padding: 2px 4px;
    font-size: 0.7rem;
    line-height: 1.0rem;
    svg {
        height: 1.0rem;
        width: 0.7rem;
        vertical-align: bottom;
    }
}

.info-card-title, .info-card-owner {
    color: var(--textcolor1);
    height: fit-content;
    align-self: center;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    flex-direction: column;
    gap: 2px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    line-height: 1.25rem;
    font-size: 0.9rem;
    svg {
        height: 1em;
        width: 1em;
        margin-right: 0.25em;
    }
}
.info-card[data-nowplaying="true"] {
    background: var(--bgcolor3);
}
.info-card[data-is-preview="true"] {
    opacity: 0.5;
    border: var(--border);
    margin: 4px;
    height: 2em;
    .info-card-owner {
        display: none;
    }
}

.info-card-playingtext {
    vertical-align: baseline;
    color: var(--linktext2);
}

.info-card-title {
    grid-column: 3 / 4;
    grid-row: 1 / 2;
    display: block;
    align-self: end;

    width: auto;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;

    white-space: normal;
    align-self: end;
}

.info-card-owner {
    font-size: 0.8rem;
    opacity: 0.8;
    grid-column: 3 / 4;
    grid-row: 2 / 3;
    align-self: start;
}

.info-card-owner, .info-card-thumbnail {
    pointer-events: none;
}

.info-card-removebtn {
    z-index: 1;
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--textcolor2);
    vertical-align: middle;
    font-size: 1rem;
    pointer-events: auto;
    :hover {
        color: var(--textcolor1);
    }
    svg {
        margin-right: 0;
    }
}

.playlist-items-container[data-is-removemode="false"] .info-card-removebtn {
    display: none;
}

.watchnext-container .info-card {
    background: var(--bgcolor2);
    border: var(--border);
    box-shadow: var(--box-shadow);
    margin-bottom: 0.5em;
    --thumb-height: 5rem;
    gap: 6px 10px;
}

.watchnext-container .info-card .info-card-title {
    font-size: 0.95rem;
}

.watch-container[data-use-card-recommend="true"] .watchnext-container .info-card, .shogi-ranking-lane-videolist-item .info-card {
    display: flex;
    flex-direction: column;
    height: auto;
    white-space: wrap;
    padding: 8px;
    gap: 10px;
    margin: 0;
    /* height: 10em; */

    .info-card-thumbnail {
        aspect-ratio: 16 / 9;
        width: 100%;
        height: auto;
    }

    .info-card-thumbnail img {
        height: 100%;
        width: auto;
        object-fit: contain;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        margin: 0 auto;
    }

    .info-card-title, .info-card-owner {
        align-self: start;
        max-width: 100%;
        gap: 0.5rem;
        font-size: 0.85rem;
    }
    .info-card-title {
        --max-line: 2
        -webkit-box-orient: vertical;
        -webkit-line-clamp: var(--max-line);
        height: calc(1.5em * var(--max-line));
        white-space: normal;
        overflow: hidden;
        display: -webkit-box;
    }
    .info-card-owner {
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
        width: 100% !important;
        display: inline-block;
        font-size: 0.8rem;
    }
}

.shogi-ranking-lane-videolist-item .info-card {
    width: 15rem;
    gap: 8px;
    background: var(--bgcolor2);
    border: var(--border);
    box-shadow: var(--box-shadow);
    padding: 10px;
    .info-card-title {
        font-size: 0.9rem;
    }
    .info-card-owner {
        font-size: 0.8rem;
    }
}
.card-drag-overlay {
    .info-card {
        width: min-content;
        background: @css{rgb(from var(--bgcolor2) r g b / 0.8)};
        backdrop-filter: blur(4px);
        border: var(--border);
        box-shadow: 0 0 8px #000;
        opacity: 0.8;
        display: flex;
        > :not(.info-card-thumbnail) {
            display: none;
        }
    }
}


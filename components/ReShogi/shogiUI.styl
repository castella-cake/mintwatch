.shogi-body {
    display: flex;
    flex-direction: column;
}

.shogi-video-count {
    display: inline-flex;
    align-items: center;
    margin-right: 0.25em;
}

.shogi-yorokobi-message {
    text-align: center;
    font-weight: bold;
    font-size: 1.5rem;
}

.shogi-type-selector-button {
    background: var(--bgcolor2);
    color: var(--textcolor1);
    border: var(--border);
    border-radius: var(--radius);
    padding: 4px 8px;
    transition: background 0.2s ease;
    text-decoration: none;
    font-size: 0.9rem;
    &[aria-disabled="true"] {
        opacity: 0.3;
    }
    &:not([aria-disabled="true"]):hover {
        background: var(--hover1);
        cursor: pointerl;
    }
    &[data-is-active="true"] {
        background: var(--textcolor1);
        color: var(--bgcolor1);
    }
}

.shogi-loading {
    text-align: center;
    padding: 16px;
    min-height: 80vh;
    opacity: 0.8;
    font-size: 1.5rem;
    font-weight: bold;
}
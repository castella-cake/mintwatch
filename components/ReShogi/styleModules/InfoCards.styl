.reshogi-container {
    div.info-card {
        background: var(--bgcolor2);
        border: var(--border);
        box-shadow: var(--box-shadow);
        border-radius: var(--radius);

        display: flex;
        flex-direction: column;

        --info-card-width: 12em;
        width: var(--info-card-width);
        height: auto;

        padding: 8px
        gap: 0.5em;

        text-decoration: none;
        overflow: hidden;
        position: relative;

        margin-bottom: 0.5em;
        margin: 0 auto;

        .info-card-thumbnail {
            aspect-ratio: 16 / 9;
            width: 100%;
        }

        .info-card-thumbnail img {
            height: 100%;
            width: auto;
            object-fit: contain;
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            margin: 0 auto;
        }

        .info-card-text {
            align-self: start;
            font-size: 0.9rem;
            max-width: 100%;
        }
        .info-card-title {
            --max-line: 2
            -webkit-box-orient: vertical;
            -webkit-line-clamp: var(--max-line);
            height: calc(1.5em * var(--max-line));
            overflow: hidden;
            display: -webkit-box;
        }
        .info-card-owner {
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
            width: 100% !important;
            display: inline-block;
            vertical-align: bottom;
            margin-top: 0.5em;
        }
    }


    a.info-card-link {
        position: absolute;
        inset: 0;
        z-index: 1;
    }

    .info-card-thumbnail {
        position: relative;
        aspect-ratio: 16 / 9;
        img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            border-radius: var(--radius-mini);
        }
    }

    .info-card-durationtext {
        position: absolute;
        right: 0;
        bottom: 0;
        background: #000a;
        color: #fff;
        margin: 2px;
        border-radius: var(--radius-mini);
        padding: 2px 4px;
        font-size: 0.7rem;
        line-height: 1.0rem;
        svg {
            height: 1.0rem;
            width: 0.7rem;
            vertical-align: bottom;
        }
    }

    .info-card-text {
        color: var(--textcolor1);
        height: fit-content;
        align-self: center;
        overflow: hidden;
        text-overflow: ellipsis;
        span svg {
            height: 1em;
            width: 1em;
            margin-right: 0.25em;
        }
        > div {
            white-space: normal;
        }
    }
    .info-card-nowplaying {
        background: var(--bgcolor3);
    }

    .info-card-playingtext {
        vertical-align: middle;
        color: var(--linktext2);
    }

    .info-card-owner {
        font-size: 0.9em;
        opacity: 0.8;
    }
   
}
.pmw-onboarding-popup-wrapper {
    position: fixed;
    z-index: 500;
    left: 0;
    bottom: 0;
}

.pmw-onboarding-popup {
    background: var(--bgcolor2);
    padding: 16px;
    border-radius: 8px;
    margin: 8px;
    box-shadow: 0px 0px 8px #000a;
    border: 1px solid var(--accent1);
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.pmw-onboarding-popup h2 {
    margin: 0;
    font-size: 1.2rem;
}

.pmw-onboarding-popup-text {
    font-size: 0.9rem;
}

.pmw-onboarding-popup-buttons {
    display: flex;
    gap: 8px;
}

.pmw-onboarding-popup-buttons > button {
    border-radius: 8px;
    padding: 4px 8px;
    background: transparent;
    color: var(--textcolor1);
    border: 1px solid var(--textcolor2);
    cursor: pointer;
    transition: background .1s ease, color .1s ease;
    &:hover {
        background: var(--textcolor1);
        color: var(--bgcolor2)
    }
    &.pmw-onboarding-popup-button-primary {
        background: var(--textcolor1);
        color: var(--bgcolor2);
        &:hover {
            background: var(--bgcolor3);
            color: var(--textcolor1);
        }
    }
}

// help
.pmw-help-content {
    font-size: 0.9rem;
    padding: 1rem;
    background: var(--bgcolor1);
    border-radius: var(--radius)
    h2 {
        margin: 0.5rem 0;
        border-left: 2px solid var(--textcolor2);
        padding-left: 0.5em;
    }
    kbd {
        background: var(--bgcolor2)
        border: var(--border);
        border-radius: var(--radius);
        padding: 0 4px;
        display: inline-block;
    }
}

// transition
.pmw-onboarding-popup-transition {
    &-enter, &-exit-active {
        --translateY: 100%;
    }
    &-enter-active, &-exit-active {
        transition: transform 0.3s ease, opacity 0.3s ease;
    }
    &-enter, &-exit-active {
        transform: translateY(var(--translateY))
        opacity: 0;
    }
    &-enter-done, &-enter-active {
        transform: translateY(0%)
        opacity: 1;
    }
}
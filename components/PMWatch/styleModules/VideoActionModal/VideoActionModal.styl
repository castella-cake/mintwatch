.videoaction-modal-wrapper {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    padding: 0;
    background: #000a;
    z-index: 110;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.videoaction-modal-container {
    background: var(--modal-background);
    padding: 2%;
    border-radius: var(--radius);
    width: @css{min(50em,100vw)};
    height: @css{max(70vh, 480px)};
    padding: @css{min(1%, 16px)};
    border: var(--border);
    box-shadow: var(--box-shadow);
    margin: auto;
}

.videoaction-modal-transition {
    &-enter, &-exit-active {
        --rotatedeg: -10deg;
        --blur: 8px;
        --zmove: -10cm;
    }
    &-enter-active {
        perspective: 100cm;
        transition: opacity 0.1s ease;
        .videoaction-modal-container {
            transition: transform 0.2s ease, filter 0.3s ease;
        }
    }
    &-exit-active {
        transition: opacity 0.3s ease;
        .videoaction-modal-container {
            transition: transform 0.2s ease, filter 0.3s ease;
        }
    }
    &-enter {
        opacity: 0;
        .videoaction-modal-container {
            transform: translate3d(0px, 0px, var(--zmove)) rotate3d(1, 0, 0, var(--rotatedeg));
        }
    }
    &-exit-active {
        opacity: 0;
        .videoaction-modal-container {
            filter: blur(var(--blur));
            transform: translate3d(0px, 0px, var(--zmove)) rotate3d(1, 0, 0, 0deg);
        }
    }
    &-enter-done, &-enter-active {
        opacity: 1;
        .videoaction-modal-container {
            filter: blur(0px);
            transform: translate3d(0px, 0px, 0px) rotate3d(1, 0, 0, 0deg);
        }
    }
    
}

.videoaction-modal-header h2 {
    margin: 0;
}

.videoaction-modal-header {
    padding: 0.5em 0;
    grid-column: 1 / 3;
}


.videoaction-modal-container {
    display: grid;
    grid-template-columns: 0.3fr 1fr;
    grid-template-rows: max-content 1fr;
    min-width: 30em;
}

button.videoaction-modal-close {
    background: transparent;
    border: transparent;
    color: var(--textcolor1);
    cursor: pointer;
    border-radius: var(--radius);
    svg {
        vertical-align: middle;
    }
}

button.videoaction-modal-close:hover {
    background: var(--hover1);
}

.videoaction-left {
    display: flex;
    flex-direction: column;
    padding-top: 8px;
    gap: 8px;
}

.videoaction-select {
    display: block;
    text-align: left;
    background: transparent;
    transition: var(--transition-normal);
    border: transparent;
    border-radius: var(--radius);
    margin-right: 8px;
    color: var(--textcolor1);
    line-height: 3em;
    &:hover {
        background: var(--hover1);
    }

    svg {
        width: 2em;
        height: 2em;
        vertical-align: middle;
    }
}

.videoaction-select[is-active="true"] {
    font-weight: bold;
    background: var(--bgcolor1);
}

.videoaction-left:has(.videoaction-select:not(.videoaction-select-bottom)[is-active="true"]) .videoaction-select:not(.videoaction-select-bottom) {
    border-radius: var(--radius) 0 0 var(--radius);
    margin-right: 0px;
}

.videoaction-select-separator {
    margin: 0 8px 0 0;
    &.videoaction-select-separator-bottom {
        margin-top: auto;
    }
    font-size: 0.8rem;
    color: var(--textcolor2);
    border-bottom: var(--border);
}

.videoaction-content {
    overflow: auto;
}

.videoaction-actiontitle {
    align-items: center;
    padding: 4px 0;
    line-height: 1.4rem;
    margin-bottom: 8px;
    .videoaction-actiontitle-subtitle {
        font-size: 0.8rem;
        opacity: 0.8;
    }
}

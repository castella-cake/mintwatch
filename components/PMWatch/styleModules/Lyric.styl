.lyrics-container {
    background: var(--bgcolor2);
    font-size: 0.95rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    max-height: 100%;
}


.lyrics-content {
    overflow-y: auto;
    flex: 1;
    padding: 16px;
    scroll-behavior: smooth;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.lyrics-content[data-is-time-information="true"] {
    .lyric-row {
        opacity: 0.5;
        transition: opacity 0.2s ease, font-size 0.2s ease;
    }
    .lyric-row[data-lyric-state="1"] {
        font-size: 1.2rem;
        opacity: 1;
        font-weight: bold;
    }
    .lyric-row[data-lyric-state="2"] {
        font-size: 1rem;
        opacity: 1;
    }
}
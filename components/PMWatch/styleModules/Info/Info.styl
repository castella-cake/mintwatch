.watch-container-grid > .videotitle-container {
    width: 100%;
    text-align: center;

    .videotitle {
        font-size: 1.25em;
        font-weight: bold;
    }
    
    .videostats {
        justify-content: center;
        span:first-child {
            border-left: none;
        }
    } 
}

.videoinfo-container {
    background: var(--bgcolor2);
    border: var(--border);
    padding: var(--info-block-padding);
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--box-shadow)

    .videotitle {
        font-size: 20px;
        font-weight: bold;
        span {
            font-size: 14px;
            opacity: 0.5;
            font-weight: normal;
        }
    }
    details {
        margin: 8px 0;
        border-radius: var(--radius);
        border: 2px solid var(--accent1);
        padding: 0;
        summary {
            padding: 8px 16px;
            border-radius: var(--radius-mini);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            transition: background 0.1s ease;
            span {
                font-size: 0.9em;
                vertical-align: middle;
                color: var(--textcolor3);
                overflow-x: hidden;
                white-space: nowrap;
                text-overflow: ellipsis;
            }
        }
        summary:hover {
            background: var(--hover1);
            cursor: pointer;
        }
    }

}
.videoinfo-owner {
    margin-left: 16px;
    border-left: 2px solid var(--accent1);
    padding-left: 16px;
    position: relative;
    img {
        width: 3em;
        aspect-ratio: 1 / 1;
        margin-right: 8px;
        border-radius: var(--radius);
    }
    > a {
        text-decoration: none;
        color: var(--textcolor1)
        > * {
            vertical-align: middle;
        }
    }
}
.videoinfo-owner-followbtn {
    vertical-align: middle;
    background: var(--bgcolor2);
    border: var(--border);
    border-radius: var(--radius);
    color: var(--textcolor1);
    padding: 4px 8px;
    font-size: 0.8em;
    margin-left: 1em;
    line-height: 1.5em;
    cursor: pointer;
    transition: background 0.2s ease;
    &:hover {
        background: var(--hover1);
    }
    svg {
        height: 1.8em;
        width: 1.5em;
        vertical-align: bottom;
    }
}

.videoinfo-titlecontainer {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
}
.videoinfo-titleinfo {
    flex: 1;
    min-width: 240px;
}
.videostats {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    > span.videostats-item {
        display: flex;
        align-items: center;
        margin-right: 0.4em;
        border-left: 2px solid var(--accent2);
        padding-left: 0.3em;
        color: var(--textcolor2);
        white-space: nowrap;
        .tabler-icon {
            height: 1.2em;
            margin-right: 0.1em;
        }
    }
}

.videodesc {
    overflow: hidden;
    overflow-wrap: break-word;
    padding: 16px;
}

.watch-container-top .videoinfo-container {
    padding: 0;
    flex: 1;
}

[use-card-info="false"] .videoinfo-container:not(.bottominfo-container) {
    background: transparent;
    border: none;
    box-shadow: none;
}
.threeleader {
    font-family: Hiragino Kaku Gothic ProN, Noto Sans JP, Meiryo, sans-serif

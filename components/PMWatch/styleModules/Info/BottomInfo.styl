[watch-type="3col"] .bottominfo-container {
    overflow: hidden;
    margin-top: 0px
}

.videoinfo-title {
    font-size: 1.2em;
    font-weight: bold;
}

.contenttree-kind-container {
    background: var(--accent1);
    padding: 8px;
    margin-top: 8px;
    border-radius: var(--radius);
    .contenttree-title {
        padding: 4px;
    }
}

.contenttree-items-container {
    display: flex;
    overflow-x: auto;
    gap: 8px;
    padding: 8px;
    .contenttree-item {
        display: block;
        flex-basis: 8rem;
        flex-shrink: 0;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        font-size: 0.8rem;
        color: var(--textcolor1);
        text-decoration: none;
        border-radius: var(--radius);
        padding: 4px;
        transition: var(--transition-normal);
        &:hover {
            background: var(--hover1);
        }
    }
    .contenttree-nothinghere {
        color: var(--textcolor2);
        text-align: center;
        flex-basis: 100%;
    }
}

.contenttree-item img {
    aspect-ratio: 16 / 9;
    width: 100%;
    object-fit: contain;
    background: var(--bgcolor3);
    border-radius: var(--radius);
}
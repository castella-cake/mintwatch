.commentlist-list-container {
    font-size: 0.9em;
    flex: 1;
    overflow: hidden;
    .commentlist-list-item {
        padding: 6px;
        //border-bottom: 1px solid var(--accent1);
        display: flex;
        max-width: 100%;
        height: 1.6em;
        align-items: center;
        gap: 4px;
        background: var(--item-bg, transparent);
        .commentlist-list-item-body {
            flex: 1;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .commentlist-list-item-vpos {
            color: var(--textcolor2);
            background: transparent;
            border: none;
            cursor: pointer;
            font-family: inherit;
        }
        .commentlist-list-item-vpos:hover {
            text-decoration: underline
        }
    }
    .commentlist-list-item[nicoru-count="1"] {
        --item-bg: var(--nicoru1)
    }
    .commentlist-list-item[nicoru-count="2"] {
        --item-bg: var(--nicoru2)
    }
    .commentlist-list-item[nicoru-count="3"] {
        --item-bg: var(--nicoru3)
    }
    .commentlist-list-item[nicoru-count="4"] {
        --item-bg: var(--nicoru4)
    }
    
    .commentlist-list-item-open {
        height: inherit;
        min-height: 1.6em;
        flex-wrap: wrap;
        box-shadow: 0 0 4px #000;
        .commentlist-list-item-body {
            white-space: normal;
        }
        .commentlist-list-item-stats, .commentlist-list-item-actions {
            flex: 100%;
            opacity: 0.8;
            font-size: 0.9em;
        }
    }
}

.commentlist-list-item-button {
    background: none;
    border: none;
    color: var(--textcolor1);
    font-family: inherit;
    cursor: pointer;
    &:hover {
        text-decoration: underline;
    }
}

.commentlist-list-item-nicorubutton {
    flex: 0.1;
    background: none;
    border: none;
    color: var(--textcolor2);
    border-radius: var(--radius-mini);
    font-family: inherit;
    line-height: 1.5em;
    font-size: 0.9em;
    white-space: nowrap;

    > * {
        vertical-align: middle;
    }

    .nicoru-icon {
        transform: rotate(90deg);
        opacity: 0.6;
        transition: transform 0.5s ease, opacity 0.2s ease;
    }

    .nicoru-icon circle {
        transition: fill 0.2s ease;
    }

    &[data-nicotta="true"] {
        color: var(--textcolor1);
        font-weight: bold;
    }

    &[data-nicotta="true"] .nicoru-icon {
        transform: rotate(0deg);
        opacity: 1;
    }
    &[data-nicotta="false"] .nicoru-icon circle {
        fill: transparent !important;
    }
    &[data-nicotta="false"] .nicoru-icon path {
        fill: var(--textcolor1);
    }

    &[aria-disabled="true"] {
        color: var(--textcolor3);
    }
}
.commentlist-list-item-nicorubutton:not([aria-disabled="true"]):hover {
    background: var(--hover1);
    cursor: pointer;
}

.commentlist-fork-selector {
    padding: 2px;
    margin: 0;
    height: 1.8rem;
    background: var(--accent1);
    color: var(--textcolor1);
    border: none;
    border-radius: var(--radius-mini);
    font-size: 0.9em;
    cursor: pointer;
    text-align: center;
}

.commentlist-list-toggletabindex {
    border: none;
    padding: 8px;
    background: #000;
    color: #fff;
}
.commentlist-list-toggletabindex[data-isopen="false"]:not(:focus-visible) {
    opacity: 0;
    font-size: 0;
    margin: 0;
    padding: 0;
}

.commentlist-list-item-nicorubutton svg {
    height: 1.5em;
    margin-right: 0.3em;
}

.commentlist-list-item-command {
    margin-right: 0.5em;
    background: var(--bgcolor1);
    border-radius: var(--radius);
    font-size: 0.9rem;
    padding: 2px 4px;
    display: inline-block;
}

.commentlist-container[data-commentlist-type="modern"] {
    .commentlist-list-container {
        background: var(--bgcolor1);
    }

    .commentlist-list-item {
        display: grid;
        grid-template-columns: 1fr max-content;
        grid-template-rows: 1fr max-content;
        height: auto;
        margin: 4px 8px;
        border-radius: var(--radius);
        background: var(--item-bg, var(--bgcolor2))
        padding: 10px;
    }
    .commentlist-list-item-open {
        grid-template-rows: repeat(5, max-content);
        .commentlist-list-item-stats {
            grid-column: 1 / 3;
        }
    }

    .commentlist-list-item-nicorubutton {
        grid-column: 2 / 3;
        grid-row: 1 / 3;
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        align-self: center;
        gap: 4px;

        .nicoru-icon {
            margin: 0;
            height: 1.5rem;
        }

        span {
            line-height: 1em;
        }
    }

    .commentlist-list-item-vpos {
        text-align: left;
        padding: 0;
        line-height: 1rem;
        font-size: 0.9rem;
    }

    .commentlist-list-item-body {
        white-space: normal;
    }
}

.commentlist-externalmenu {
    background: var(--bgcolor1);
    padding: 8px;
    display: flex;
    align-items: center;
    gap: 8px;
    border-bottom: var(--border);

    button {
        background: var(--bgcolor2);
        border: var(--border);
        border-radius: var(--radius);
        color: var(--textcolor1);
        padding: 2px 4px;
        transition: var(--transition-normal);
        cursor: pointer;
    }

    button svg {
        vertical-align: middle;
    }

    button:hover {
        background: var(--hover1);
    }
}


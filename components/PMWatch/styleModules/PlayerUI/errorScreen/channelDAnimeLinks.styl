.channel-danime-links-container {
    border-top: var(--border);
    margin-top: 16px;
    padding-top: 16px;
}

.channel-danime-links-title {
    font-weight: bold;
    margin-bottom: 16px;
}

.channel-danime-links-channel-icon {
    height: 2rem;
    border-radius: 1024px;
}

.channel-danime-links-channel > * {
    vertical-align: middle;
    margin-right: 8px;
}

.channel-danime-links-item {
    border: var(--border);
    border-radius: var(--radius);
    padding: 16px;
}

.channel-danime-links-channel {
    display: block;
    text-decoration: none;
}

.channel-danime-links-watch-link {
    display: block;
}

.channel-danime-links-channel-status {
    border: var(--border);
    border-radius: var(--radius);
    padding: 4px 8px;
}

.channel-danime-links-watch-link {
    text-decoration: none;
    margin-top: 16px;
    font-size: 0.9rem;
    padding: 6px 10px;
    background: var(--bgcolor1);
    width: max-content;
    border: var(--border);
    border-radius: var(--radius);
    transition: background 0.2s ease;
}

.channel-danime-links-watch-link:hover {
    background: var(--bgcolor2);
}
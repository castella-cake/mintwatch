.playersettings-container {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: max(35%, 24rem);
    //height: 100%;
    background: #111e;
    color: #fff;
    backdrop-filter: blur(8px);
    padding: 16px;
    z-index: 2;
    overflow: auto;
    overflow-y: scroll;
    cursor: auto; // 動画の上で動いてない判定されてカーソルが見えなくならないように
    margin: 4px;
    border-radius: 6px;
    border: 1px solid #555a;
    box-shadow: 0px 0px 4px #000;
    p {
        opacity: 0.8;
        font-size: 0.8rem;
        margin: 8px 0;
    }
    .playersettings-item {
        margin-bottom: 8px;
        border-top: 1px solid #fff3;
        padding-top: 8px;
        line-height: 0.8rem
        label {
            line-height: 1.5rem;
            font-size: 0.8rem;
            select {
                margin-left: 8px;
                background: #333;
                color: #fff;
                border-radius: var(--radius);
                padding: 4px;
                border: none;
                cursor: pointer;
                &:hover, &:focus {
                    background: #555;
                }
            }
        }
        .playersettings-hint {
            font-size: 0.7rem;
            opacity: 0.8;
            margin-top: 4px;
        }
        button {
            background: #aaa5;
            color: #fff;
            border-radius: 6px;
            border: 1px solid #555a;
            padding: 4px 8px;
            cursor: pointer;
            &:hover {
                background: #ccc5;
            }
        }
    }
    &::-webkit-scrollbar {
        background: transparent;
    }
}
.playersettings-title {
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 8px;
    
    .playersettings-version {
        font-size: 0.9rem;
        margin-left: 0.5em;
        font-weight: normal;
        opacity: 0.8;
    }
}

.playersettings-item details summary {
    font-size: 0.8rem;
    margin: 4px;
}

.playersettings-item details .playersettings-item {
    border: none;
}

.playersettings-slider {
    display: flex;
    gap: 8px;
    align-items: center;
    margin-bottom: 8px;
}

.playersettings-slider label {
    flex: 1;
    display: flex;
    justify-content: space-between;
}

.playersettings-container .playersettings-item button {
    width: 100%;
}